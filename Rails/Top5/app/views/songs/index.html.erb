<p id="notice"><%= notice %></p>

<h1>My Songs</h1>
<p><%= link_to "Add a New Song", new_song_path, class: "btn btn-primary" %>
</p>


<div class="row">
  <% @songs.each do |song| %>
  <div class="col-md-6">
    <div class="well">
      <h2><%= link_to song.name, song %></h2>
      <h3>by <%= song.artist.name %></h3>
      <p>
        <% "#{song.rating}".to_i.times do %></h4>
        <span class="glyphicon glyphicon-star"></span>
        <% end %>
      </p>
      <h4><%= link_to edit_song_path(song) do %>
        <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
      <h4><%= link_to song, method: :delete, data: {confirm: 'Are you sure?'}  do %>
        <span class="glyphicon glyphicon-trash"></span>
        <% end %>
       </h4>     
    
        </div>
      </div>
    <% end %>
  </div>

