<% if notice != nil %>
  <p id="notice" class="alert alert-success" role="alert">
    <%= notice %>
  </p>
<% end %>

<h1>Meet our Teachers</h1>

 <div class="row">
    <% @teachers.each do |teacher| %>
      <div class="col-md-4">
       <div class="panel panel-default">
        <div class="panel-body">
         <h3><%= teacher.first_name %>
         <%= teacher.last_name %></h3>
         <p><%= teacher.subject %></p>
       
         <div class="btn-group">
          <%= link_to 'Show', teacher, class: "btn btn-default" %>
          <%= link_to 'Edit', edit_teacher_path(teacher), class: "btn btn-default" %>
          <%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
         </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


