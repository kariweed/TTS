<% if notice != nil %>
  <p id="notice" class="alert alert-success" role="alert">
    <%= notice %>
  </p>
<% end %>

<h1>Listing Pets</h1>


<div class="row">
    <% @pets.each do |pet| %>
      <div class="col-md-4">
       <div class="panel panel-default">
        <div class="panel-body">
         <h2><%= pet.animal %></h2>
         <p><%= pet.favorite %></p>
         
         <div class="btn-group">
          <%= link_to 'Show', pet, class: "btn btn-default" %>
          <%= link_to 'Edit', edit_pet_path(destination), class: "btn btn-default" %>
          <%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
         </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

