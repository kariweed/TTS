<% if notice != nil %>
  <p id="notice" class="alert alert-success" role="alert">
    <%= notice %>
  </p>
<% end %>

<h1>Meet our Students</h1>


<div class="row">
    <% @students.each do |student| %>
      <div class="col-md-4">
       <div class="panel panel-default">
        <div class="panel-body">
         <h3><%= student.first_name %>
          <%= student.last_name %></h3>
         <p><%= student.age %></p>
         <p>Grade: <%= student.grade %></p>
       
         <div class="btn-group">
          <%= link_to 'Show', student, class: "btn btn-default" %>
          <%= link_to 'Edit', edit_student_path(student), class: "btn btn-default" %>
          <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
         </div>
        </div>
      </div>
    </div>
  <% end %>
</div>



