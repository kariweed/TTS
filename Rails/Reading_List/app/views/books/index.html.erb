<p id="notice"><%= notice %></p>

<h1><u>Kari's Book List</U></h1>

<table>
  <thead>
    <tr>
      <th><u>Title</u></th>
      <th><u>Author</u></th>
      <th><u>Plot</u></th>
      <th><u>Rating</u></th>
      <th><u>Complete</u></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><i><%= book.title %></i></td>
        <td><%= book.author %></td>
        <td><%= book.plot %></td>
        <td><%= book.rating %></td>
        <td><%= book.complete %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you really, REALLY sure you want to delete this listing?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a New Book', new_book_path %>
